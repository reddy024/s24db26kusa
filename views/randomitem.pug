extends layout
 
block content
  h1= title
  p Welcome to the randomitem.
 
  // Add this code to generate random images
  -
    const image_names = [
      'food1.jpg',
      'food2.jpg',
      'food3.jpg',
      'food4.jpeg',
      'food5.jpg'
    ]
    const numImages = 3;
    const displayedImages = [];
 
    for (let i = 0; i < numImages; i++) {
      const randomIndex = Math.floor(Math.random() * image_names.length);
      const randomImage = image_names[randomIndex];
      displayedImages.push(randomImage);
    }
 
  // Loop through the random images
  each image in displayedImages
    img(src=`/images/${image}`, alt=image, height="300", width="300")